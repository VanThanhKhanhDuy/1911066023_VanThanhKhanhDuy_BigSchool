@model IEnumerable<_1911066023_VanThanhKhanhDuy_BigSchool.Models.Course>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <ul>
        @foreach(var course in Model)
            {
                <li>
                    @course.DateTime
                </li>
            }
    </ul>
</div>
<ul class="course">
    @foreach (var course in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @course.DateTime.ToString("MM")
                        </div>
                        <div class="day">
                            @course.DateTime.ToString("dd")
                        </div>
                    </div>
                    <div class="details">
                        <span class="lecturer">
                            @course.Lecturer.UserName
                        </span>
                        <span class="category">
                            @course.Category.Name
                        </span>

                    </div>
                </li>
            }
</ul>